<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_forum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quanlt.vozforums.ui.forum.ForumFragment"
    tools:showIn="@layout/activity_forum">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_forum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_thread" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:contentDescription="loading"
        android:id="@+id/progress_loading"
        style="@style/Widget.MaterialProgressBar.ProgressBar.NoPadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</LinearLayout>
